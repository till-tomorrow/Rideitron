    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@drawable/roundbutton"
        android:text="Select Contacts"
        android:padding="20dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/buttonSelectContacts"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/open"
        android:alpha="0.9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Turn On Bluetooth"
        android:textSize="12dp"
        android:padding="20dp"
        android:textColor="#fff"
        android:background="@drawable/circularbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="About the Innovators"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="20dp"
        android:alpha="0.9"
        android:textSize="12dp"
        android:textColor="#fff"
        android:background="@drawable/circularbutton"
        android:layout_above="@+id/buttonSelectContacts"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp"
        android:id="@+id/btnAboutDev" />

    <Button
        android:id="@+id/close"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="15dp"
        android:text="Close app"
        android:padding="20dp"
        android:alpha="0.9"
        android:textColor="#fff"
        android:background="@drawable/circularbutton"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp" />


</RelativeLayout>
